@model IEnumerable<MarkPro.Models.TotalRequestCount>

@{
    ViewData["Title"] = "TotalRequests";
}

<div class="row">
   @foreach (var item in Model)
    {     
        <div class="card m-1" style="width:350px ">
            <div class="card-body" >
                <h5 class="card-title"><b>Pending Requests: </b>@Html.DisplayFor(modelItem => item.PendingRequests)</h5>
                <h5 class="card-title"><b>Approved Requests: </b>@Html.DisplayFor(modelItem => item.ApprovedRequests)</h5>
                <h5 class="card-title"><b>Processing Requests: </b>@Html.DisplayFor(modelItem => item.ProcessingRequests)</h5>
                <h5 class="card-title"><b>Available Requests: </b>@Html.DisplayFor(modelItem => item.AvailableRequests)</h5>
             </div>
        </div>
    }
</div>

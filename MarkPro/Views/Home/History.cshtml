@model IEnumerable<MarkPro.Models.MediaHistory>


@{
    ViewData["Title"] = "All User Requests";
}

@foreach (var item in Model)
{
    var i = 0;
    if(i < 1)
    {
        <h2 class="card-title"><b>Media History: </b></h2>
        break;
    }
    
}

<div class="row">
   @foreach (var item in Model)
    {
        <div class="card m-1" style="width:350px; box-shadow: 0 0 5px 0; background-color: lightblue; backdrop-filter: blur(10px); ">
            <div class="card-body" >
                <h5 class="card-title"><b>Media Name/ID: </b>@Html.DisplayFor(modelItem => item.MediaTitle)</h5>
                <h5 class="card-title"><b>User: </b>@Html.DisplayFor(modelItem => item.UserWatching)</h5>
                <h5 class="card-title"><b>Completion Status </b>@Html.DisplayFor(modelItem => item.CompletionStatus)</h5>
                <h5 class="card-title"><b>Watched Status: </b>@Html.DisplayFor(modelItem => item.WatchedStatus)</h5>
             </div>
        </div>
    }
</div>
